@model Leome.Pages.Companies.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Company</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.CompanyName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.CompanyName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.RepresentativesFirstMidName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.RepresentativesFirstMidName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.RepresentativesLastname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.RepresentativesLastname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Intro)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Intro)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Comments)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Comments)
        </dd>
    </dl>
</div>

@if (Model.Jobs != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Jobs[0].Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Jobs[0].Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Jobs[0].City)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Jobs[0].Company)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Jobs)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Company.ID)
                    </td>
                    <td>
                        <a asp-page="/Jobs/Edit" asp-route-id="@item.ID">Edit</a> |
                        <a asp-page="/Jobs/Details" asp-route-id="@item.ID">Details</a> |
                        <a asp-page="/Jobs/Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
    <div>
        <a asp-page="./Edit" asp-route-id="@Model.Company.ID">Edit</a> |
        <a asp-page="./Index">Back to List</a>
    </div>
